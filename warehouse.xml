<mujoco>
  <option timestep="0.02" gravity="0 0 -9.81"/>
  
  <worldbody>
    <light diffuse=".5 .5 .5" pos="0 0 3" dir="0 0 -1"/>
    <geom type="plane" size="2 2 0.1" rgba=".9 .9 .9 1" friction="1 0.5 0.5"/>
    
    <!-- Robot with proper movement -->
    <body name="robot" pos="0 0 0.05">
      <joint name="robot_x" type="slide" axis="1 0 0" range="-2 2" damping="0.5"/>
      <joint name="robot_y" type="slide" axis="0 1 0" range="-2 2" damping="0.5"/>
      <geom type="box" size=".1 .1 .05" rgba="0 .9 0 1" mass="1"/>
      <site name="gripper" pos="0.1 0 0" size="0.02"/>
    </body>
    
    <!-- Package that can be moved -->
    <body name="package" pos="0.5 0.5 0.05">
      <joint name="package_x" type="slide" axis="1 0 0" range="-2 2"/>
      <joint name="package_y" type="slide" axis="0 1 0" range="-2 2"/>
      <geom type="box" size=".05 .05 .05" rgba=".9 0 0 1" mass="0.1"/>
    </body>
    
    <!-- Target zone -->
    <body name="target" pos="-0.5 -0.5 0.05">
      <geom type="cylinder" size=".15 .02" rgba="0 0 .9 0.3"/>
    </body>
    
    <!-- Shelves as obstacles -->
    <body name="shelf1" pos="0.8 0 0.1">
      <geom type="box" size="0.1 0.4 0.1" rgba="0.5 0.5 0.5 1"/>
    </body>
    <body name="shelf2" pos="-0.8 0 0.1">
      <geom type="box" size="0.1 0.4 0.1" rgba="0.5 0.5 0.5 1"/>
    </body>
    <body name="shelf3" pos="0 0.8 0.1">
      <geom type="box" size="0.4 0.1 0.1" rgba="0.5 0.5 0.5 1"/>
    </body>
  </worldbody>
  
  <actuator>
    <motor joint="robot_x" name="robot_x_motor" gear="50" ctrllimited="true" ctrlrange="-1 1"/>
    <motor joint="robot_y" name="robot_y_motor" gear="50" ctrllimited="true" ctrlrange="-1 1"/>
  </actuator>
  
  <!-- Connect robot and package when close -->
  <equality>
    <connect body1="robot" body2="package" anchor="0.1 0 0" solimp="0.9 0.95 0.001" solref="0.02 1"/>
  </equality>
</mujoco>